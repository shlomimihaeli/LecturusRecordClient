      <Button layoutX="483.0" layoutY="336.0" onMouseClicked="#gotoNewVideoScreen"  mnemonicParsing="false" text="New video" />
      <Button layoutX="356.0" fx:id="editVideoOnlineBtn" layoutY="337.0" mnemonicParsing="false" prefWidth="117.0" visible="false"  text="Edit new video" />
   </children>
</AnchorPane>
